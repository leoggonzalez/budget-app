<% today = Date.today %>
<thead>
  <tr>
    <th scope="col">Description</th>
    <th scope="col"><%= today.strftime("%B") %></th>
    <th scope="col"><%= Date.new(today.year, today.mon + 1, today.mday).strftime("%B") %></th>
    <th scope="col"><%= Date.new(today.year, today.mon + 2, today.mday).strftime("%B") %></th>
    <th scope="col"><%= Date.new(today.year, today.mon + 3, today.mday).strftime("%B") %></th>
    <th scope="col"><%= Date.new(today.year, today.mon + 4, today.mday).strftime("%B") %></th>
    <th scope="col"><%= Date.new(today.year, today.mon + 5, today.mday).strftime("%B") %></th>
  </tr>
</thead>