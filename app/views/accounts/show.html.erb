<h1><%= @account.name %></h1>
<div class="card">
  <header class="p-3">
    <h2>General Details</h2>
  </header>
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">Name</th>
        <td><%= @account.name %></td>
      </tr>
      <tr>
        <th scope="row">Balance</th>
        <td><%= @account.balance %></td>
      </tr>
      <tr>
        <th scope="row">Description</th>
        <td><%= @account.description %></td>
      </tr>
    </tbody>
  </table>
</div>
<div class="mt-3">
  <%= link_to "Back to accounts", accounts_path, class: "btn btn-primary" %>
  <%= link_to  "Edit", edit_account_path(@account), class: "btn btn-warning" %>
  <%= link_to 'Destroy', account_path(@account), method: :delete, data: {
          confirm: "Are you sure you wan't to delete this article?"
        }, class: "btn btn-danger" %>

</div>