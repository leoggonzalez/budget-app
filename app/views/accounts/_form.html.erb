<%= render 'shared/errors', obj: @account %>

<%= form_with(model: @account, local: true) do |form| %>
<div class="form-group">
  <%= form.label :name %>
  <%= form.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
  <%= form.label :balance, "Initial Balance" %>
  <%= form.number_field :balance, class: "form-control", step: "any" %>
</div>
<div class="form-group">
  <%= form.label :description %>
  <%= form.text_area :description, class: "form-control" %>
</div>

<%= form.submit class: "btn btn-primary" %>
<%= link_to  "Cancel", accounts_path, class: "btn btn-light" %>
<% end %>